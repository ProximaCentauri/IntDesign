<c:PopupView x:Class="View.Controls.DependentInformation"
        xmlns:c="clr-namespace:Model.Controls;assembly=Model"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Model.Controls;assembly=Model"
        Width="Auto"
        Height="Auto"
        BackgroundType="Shroud"
        MaxWidth="582"
        Alignment="Center"
             Loaded="PopupView_Loaded">
    <Grid Name="DependentInfo">
        <controls:DropShadowBorder
            Style="{StaticResource dropShadowStyle}" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock Text="word" Width="100" Height="50" Grid.Row="0" Grid.Column="0"/>
                <TextBlock Text="word" Width="100" Height="50" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Text="word" Width="100" Height="50" Grid.Row="2" Grid.Column="0"/>
                <Button Content="close" Width="50" Height="50" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</c:PopupView>
