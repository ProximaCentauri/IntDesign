<UserControl x:Class="View.Controls.PersonalInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:View"       
        xmlns:control="clr-namespace:View.Controls"
        Height="Auto"
        Width="1024"
        Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="341" />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,0,10"
                  Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="63*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Identification"
                           Style="{StaticResource mainHeaderStyle}"
                           Grid.ColumnSpan="2" />
                <Separator Style="{StaticResource mainSeparatorStyle}"
                           Grid.ColumnSpan="2"
                           Margin="5,0,10,0" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Last Name:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="150"
                             Margin="0,0,10,0"                             
                             Text="{Binding CurrentSelectedCustomer.LastName}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="First Name:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.FirstName}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="2">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Middle Name:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="194"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.MiddleName}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Religion:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="150"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.Religion}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Nationality:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.Nationality}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="2">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Valid ID:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="194"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.ValidId}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Birthdate:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <DatePicker Width="150"
                                SelectedDateFormat="Short"
                                SelectedDate="{x:Static sys:DateTime.Today}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Birthplace:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.BirthPlace}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3"
                  Grid.Column="2">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Status:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <ComboBox Width="70"
                        SelectedValue="{Binding CurrentSelectedCustomer.Status}"
                              SelectedValuePath="Content">
                        <ComboBoxItem x:Name="Single"
                                      Content="Single"
                                      IsSelected="True"></ComboBoxItem>
                        <ComboBoxItem x:Name="Married"
                                      Content="Married"></ComboBoxItem>
                        <ComboBoxItem x:Name="Widow"
                                      Content="Widow"></ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="Gender:"
                               Width="50"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <ComboBox Width="70"
                        SelectedValue="{Binding CurrentSelectedCustomer.Gender}"
                              SelectedValuePath="Content">
                        <ComboBoxItem IsSelected="True"
                                      Content="Male" />
                        <ComboBoxItem Content="Female" />
                    </ComboBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Spouse Name:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="150"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.CustomerSpouse.LastName}">
                    </TextBox>
                    <StackPanel.Style>
                        <Style>
                            <Setter Property="StackPanel.Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=Married, Path=IsSelected}"
                                             Value="True">
                                    <Setter Property="StackPanel.Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="4"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Spouse Address:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"></TextBox>
                    <StackPanel.Style>
                        <Style>
                            <Setter Property="StackPanel.Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=Married, Path=IsSelected}"
                                             Value="True">
                                    <Setter Property="StackPanel.Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="4"
                Grid.Column="2">
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,5">
                    <TextBlock
                        Text="Birthdate:"
                        Width="100"
                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <DatePicker
                        Width="195"
                        SelectedDateFormat="Short"
                        SelectedDate="{x:Static sys:DateTime.Today}" />
                    <StackPanel.Style>
                        <Style>
                            <Setter
                                Property="StackPanel.Visibility"
                                Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding ElementName=Married, Path=IsSelected}"
                                    Value="True">
                                    <Setter
                                        Property="StackPanel.Visibility"
                                        Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Dependents Information"
                               Width="150"
                               Style="{StaticResource mainSubHeaderStyle}"
                               Margin="0,10,0,0" />
                    <Button
                        x:Name="addDependent"
                        Width="50"
                        Height="20"
                        Margin="0,8,0,0"                        
                        Click="addDependent_Click"
                        Style="{StaticResource iconButtonStyle}" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal"
                    		HorizontalAlignment="Left">
                            <Image Style="{StaticResource addIconStyle}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid Height="75"
                          Grid.Row="1"
                          Width="900">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Last Name"
                                            Width="250" />
                        <DataGridTextColumn Header="First Name"
                                            Width="250" />
                        <DataGridTextColumn Header="Address"
                                            Width="250" />
                        <DataGridTextColumn Header="Birthdate"
                                            Width="250" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="341" />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,0,10"
                  Grid.ColumnSpan="5">
                <TextBlock Text="Contact Information"
                           Style="{StaticResource mainHeaderStyle}" />
                <Separator Style="{StaticResource mainSeparatorStyle}" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Mobile Number:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="150"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.MobileNumber}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Landline Number:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.LandLineNumber}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="2">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Email Address:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="194"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.EmailAddress}"></TextBox>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,0,10"
                  Grid.ColumnSpan="5">
                <TextBlock Text="Primary Address"
                           Style="{StaticResource mainHeaderStyle}" />
                <Separator Style="{StaticResource mainSeparatorStyle}" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="No./Building:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="150"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.NumBuilding}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Street:"
                               Width="75"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.Street}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="2">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Village/District:"
                               Width="75"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox
                        Width="270"
                        Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.VillageDistrict}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="City:"
                               Width="100"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="150"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.City}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="State:"
                               Width="75"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="180"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.State}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="2">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Country:"
                               Width="75"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="130"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.Country}"></TextBox>
                    <TextBlock Text="Zip Code:"
                               Width="50"
                               Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                    <TextBox Width="75"
                             Margin="0,0,10,0"
                        Text="{Binding CurrentSelectedCustomer.ZipCode}"></TextBox>
                </StackPanel>
            </Grid>                    
        </Grid>
    </Grid>

</UserControl>
