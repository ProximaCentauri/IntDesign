<Window
    x:Class="View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:View"
    mc:Ignorable="d"
    Title="MainWindow"
    Width="1024"
    Height="768">
    <Window.Resources>
        <ResourceDictionary
            Source="/SkinContent.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="70" />
            <RowDefinition
                Height="150" />
            <RowDefinition
                Height="435" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Margin="5,24,5,5"
            Height="30">
            <StackPanel
                Orientation="Horizontal">
                <!--<TextBlock
                    Text="Search By:"
                    Style="{StaticResource searchByTextStyle}" />-->
                <ComboBox
                    Width="150"
                    Margin="10,0,0,0"
                    Style="{StaticResource searchByComboxBoxStyle}"
                    Loaded="ComboBox_Loaded" />
                <TextBox
                    Width="250"
                    Style="{StaticResource searchByTextStyle}"
                    Margin="10,0,0,0" />
                <Button
                    Width="120"
                    Margin="10,0,0,0"
                    Style="{StaticResource mainButtonStyle}">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                        <Image
                            Style="{StaticResource searchIconStyle}" />
                        <TextBlock
                            Text="Search"
                            Style="{StaticResource mainButtonTextStyle}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="150"
                    Margin="100,0,0,0"
                    Style="{StaticResource mainButtonStyle}">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                        <Image
                            Style="{StaticResource addUserIconStyle}" />
                        <TextBlock
                            Text="Add customer"
                            Style="{StaticResource mainButtonTextStyle}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!--This panel is for search results-->
        <Grid
            Grid.Row="1">
            <DataGrid
                Width="1000">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="Last Name"
                        Width="250" />
                    <DataGridTextColumn
                        Header="First Name"
                        Width="250" />
                    <DataGridTextColumn
                        Header="Address"
                        Width="250" />
                    <DataGridTextColumn
                        Header="Alerts"
                        Width="250" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid
            Grid.Row="2">
            <Grid>
                <TabControl>
                    <TabControl.Resources>
                        <Style
                            TargetType="TabItem">
                            <Setter
                                Property="Template">
                                <Setter.Value>
                                    <ControlTemplate
                                        TargetType="TabItem">
                                        <Grid
                                            Name="Panel">
                                            <ContentPresenter
                                                x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                Style="{StaticResource TabItemStyle}"
                                                Margin="20,2,10,2" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger
                                                Property="IsSelected"
                                                Value="True">
                                                <Setter
                                                    TargetName="Panel"
                                                    Property="Background"
                                                    Value="#7f0000" />
                                            </Trigger>
                                            <Trigger
                                                Property="IsSelected"
                                                Value="False">
                                                <Setter
                                                    TargetName="Panel"
                                                    Property="Background"
                                                    Value="#DC002A" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

