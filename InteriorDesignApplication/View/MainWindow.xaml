<Window
    x:Class="View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:View"
    xmlns:vwMdl="clr-namespace:ViewModel;assembly=ViewModel"
    mc:Ignorable="d"
    Title="MainWindow"
    WindowStyle="SingleBorderWindow"
    ResizeMode="CanMinimize"
    Top="0"
    Left="0"
    Width="1024"
    Height="768">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source= "/SkinContent.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="70" />
            <RowDefinition
                Height="150" />
            <RowDefinition
                Height="435" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Margin="5,24,5,5"
            Height="30">
            <StackPanel
                Orientation="Horizontal">
                <!--<TextBlock
                    Text="Search By:"
                    Style="{StaticResource searchByTextStyle}" />-->
                <ComboBox
                    Width="150"
                    Margin="10,0,0,0"
                    Style="{StaticResource searchByComboxBoxStyle}"
                    Loaded="ComboBox_Loaded" />
                <TextBox
                    Width="250"
                    Style="{StaticResource searchByTextStyle}"
                    Margin="10,0,0,0" />
                <Button
                    Width="120"
                    Margin="10,0,0,0"
                    Style="{StaticResource mainButtonStyle}">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                        <Image
                            Style="{StaticResource searchIconStyle}" />
                        <TextBlock
                            Text="Search"
                            Style="{StaticResource mainButtonTextStyle}" />
                    </StackPanel>
                </Button>
                <Button
                    Width="150"
                    Margin="100,0,0,0"
                    Style="{StaticResource mainButtonStyle}">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                        <Image
                            Style="{StaticResource addUserIconStyle}" />
                        <TextBlock
                            Text="Add customer"
                            Style="{StaticResource mainButtonTextStyle}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!--This panel is for search results-->
        <Grid
            Grid.Row="1">
            <DataGrid
                Width="1000"
                Name="GridCustomers"
                ItemsSource="{Binding Customers, Mode=TwoWay}"
                SelectedItem="{Binding CurrentSelectedCustomer}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="Last Name"
                        Width="250" 
                        Binding="{Binding LastName}"/>
                    <DataGridTextColumn
                        Header="First Name"
                        Width="250"
                        Binding="{Binding FirstName}"/>
                    <DataGridTextColumn
                        Header="Address"
                        Width="250" />
                    <DataGridTextColumn
                        Header="Alerts"
                        Width="250" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid
            Grid.Row="2">
            <Grid>
                <TabControl>
                    <TabControl.Resources>
                        <Style
                            TargetType="TabItem">
                            <Setter
                                Property="Template">
                                <Setter.Value>
                                    <ControlTemplate
                                        TargetType="TabItem">
                                        <Grid
                                            Name="Panel">
                                            <ContentPresenter
                                                x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                Style="{StaticResource TabItemStyle}"
                                                Margin="20,2,10,2" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger
                                                Property="IsSelected"
                                                Value="True">
                                                <Setter
                                                    TargetName="Panel"
                                                    Property="Background"
                                                    Value="{StaticResource tabItemBackgroundColorBrush}" />
                                            </Trigger>
                                            <Trigger
                                                Property="IsSelected"
                                                Value="False">
                                                <Setter
                                                    TargetName="Panel"
                                                    Property="Background"
                                                    Value="{StaticResource tabItemSelectedBackgroundColorBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Style="{StaticResource personalInfoIconStyle}" />
                                <TextBlock Text="Personal Information"
                                           Style="{StaticResource tabItemFontStyle}" />
                            </StackPanel>
                        </TabItem.Header>
                        <local:PersonalInformation DataContext="{Binding CurrentSelectedCustomer}"/>
                        
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Style="{StaticResource companyDetailsIconStyle}" />
                                <TextBlock
                                    Text="Company Details"
                                    Style="{StaticResource tabItemFontStyle}" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid
                            Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="80" />
                                <ColumnDefinition Width="186"/>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="341" />
                            </Grid.ColumnDefinitions>
                            <Grid
                                Margin="0,0,0,10"
                                Grid.ColumnSpan="4">
                                <TextBlock
                                    Text="Company Information"
                                    Style="{StaticResource mainHeaderStyle}" />
                                <Separator
                                    Style="{StaticResource mainSeparatorStyle}" />
                            </Grid>
                            <Grid
                                Grid.Row="1"
                                Grid.Column="0" Grid.ColumnSpan="2">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0,0,0,5">
                                    <TextBlock
                                        Text="Company Name:"
                                        Width="100"
                                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                                    <TextBox
                                        Width="150"
                                        Margin="0,0,10,0"></TextBox>
                                </StackPanel>
                            </Grid>
                            <Grid
                                Grid.Row="1"
                                Grid.Column="2">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0,0,0,5">
                                    <TextBlock
                                        Text="Address:"
                                        Width="75"
                                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                                    <TextBox
                                        Width="180"
                                        Margin="0,0,10,0"></TextBox>
                                </StackPanel>
                            </Grid>
                            <Grid
                                Grid.Row="1"
                                Grid.Column="3">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0,0,0,5">
                                    <TextBlock
                                        Text="Contact Number:"
                                        Width="100"
                                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                                    <TextBox
                                        Width="180"
                                        Margin="0,0,10,0"></TextBox>
                                </StackPanel>
                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Grid.Column="0" Grid.ColumnSpan="2">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0,0,0,5">
                                    <TextBlock
                                        Text="Website:"
                                        Width="100"
                                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                                    <TextBox
                                        Width="150"
                                        Margin="0,0,10,0"></TextBox>
                                </StackPanel>
                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Grid.Column="2">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0,0,0,5">
                                    <TextBlock
                                        Text="Email Address:"
                                        Width="75"
                                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                                    <TextBox
                                        Width="180"
                                        Margin="0,0,10,0"></TextBox>
                                </StackPanel>
                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Grid.Column="3">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0,0,0,5">
                                    <TextBlock
                                        Text="Other Information:"
                                        Width="100"
                                        Style="{StaticResource mainLabelTextStyle}"></TextBlock>
                                    <TextBox
                                        Width="180"
                                        Margin="0,0,10,0"></TextBox>
                                </StackPanel>
                            </Grid>
                            <Grid
                                Grid.Row="3"
                                Grid.ColumnSpan="3">
                                <StackPanel
                                    Orientation="Vertical">
                                    <TextBlock
                                        Text="Notes:"
                                        Width="150"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource mainSubHeaderStyle}"
                                        Margin="0,10,0,0" />
                                    <TextBox
                                        Width="Auto"
                                        Height="250" />
                                </StackPanel>
                            </Grid>
                        </Grid>

                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Style="{StaticResource bankDetailsIconStyle}" />
                                <TextBlock
                                    Text="Bank Details"
                                    Style="{StaticResource tabItemFontStyle}" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Text="Bank Information"
                                    Style="{StaticResource mainHeaderStyle}" />
                                <Button
                                    Width="40"
                                    Height="20"
                                    Style="{StaticResource iconButtonStyle}">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                        <Image
                                            Style="{StaticResource addIconStyle}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <Separator
                                Style="{StaticResource mainSeparatorStyle}" />
                            <DataGrid
                                Height="75"
                                Width="1000"
                                Margin="0,10,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Header="Name of Bank"
                                        Width="200" />
                                    <DataGridTextColumn
                                        Header="Account Name"
                                        Width="200" />
                                    <DataGridTextColumn
                                        Header="Account Number"
                                        Width="200" />
                                    <DataGridTextColumn
                                        Header="Bank Address"
                                        Width="250" />
                                    <DataGridTextColumn
                                        Header="Swift Code"
                                        Width="150" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Style="{StaticResource utilityBillsIconStyle}" />
                                <TextBlock
                                    Text="Utility Bills"
                                    Style="{StaticResource tabItemFontStyle}" />
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Style="{StaticResource titlesIconStyle}" />
                                <TextBlock
                                    Text="Titles"
                                    Style="{StaticResource tabItemFontStyle}" />
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel
                                Orientation="Horizontal">
                                <Image
                                    Style="{StaticResource fitOutsIconStyle}" />
                                <TextBlock
                                    Text="Fit Outs"
                                    Style="{StaticResource tabItemFontStyle}" />
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
        <Grid
            Grid.Row="3"
            HorizontalAlignment="Right">
            <Button
                Width="150"
                Height="50"
                Margin="0,15,24,15"
                Style="{StaticResource mainButtonStyle}"
                Name="BtnSaveDetails" Click="BtnSaveDetails_Click">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
                    <Image
                        Style="{StaticResource saveUserDetailIconStyle}" />
                    <TextBlock
                        Text="Save Details"
                        Style="{StaticResource mainButtonTextStyle}" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
