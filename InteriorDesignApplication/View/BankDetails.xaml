<Window
    x:Class="View.BankDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BankDetails"
    Height="285"
    Width="310"
    ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto"></RowDefinition>
            <RowDefinition 
                Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid
            Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="21"></RowDefinition>
                <RowDefinition
                    Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock
                Text="Bank Detail Information"
                Style="{StaticResource mainHeaderStyle}" />
            <Separator
                Style="{StaticResource mainSeparatorStyle}" />
            <StackPanel
                Orientation="Vertical"
                Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="90"></ColumnDefinition>
                        <ColumnDefinition
                            Width="250"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="Name of Bank:"
                        Style="{StaticResource mainLabelTextStyle}"
                        Margin="0,5,5,0"></TextBlock>
                    <TextBox
                        Grid.Column="1"
                        Width="200"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"></TextBox>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Account Name:"
                        Style="{StaticResource mainLabelTextStyle}"
                        Margin="0,5,5,0"></TextBlock>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="200"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"></TextBox>
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Account #:"
                        Style="{StaticResource mainLabelTextStyle}"
                        Margin="0,5,5,0"></TextBlock>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="200"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"></TextBox>
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="Branch:"
                        Style="{StaticResource mainLabelTextStyle}"
                        Margin="0,5,5,0"></TextBlock>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="200"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"></TextBox>
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="Address:"
                        Style="{StaticResource mainLabelTextStyle}"
                        Margin="0,5,5,0"></TextBlock>
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="200"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"></TextBox>
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="Swift Code:"
                        Style="{StaticResource mainLabelTextStyle}"
                        Margin="0,5,5,0"></TextBlock>
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Width="200"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"></TextBox>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="1">
            <Button
                Width="100"
                Height="30"
                Style="{StaticResource mainButtonStyle}">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
                    <Image
                        Style="{StaticResource checkIconStyle}" />
                    <TextBlock
                        Text="Add"
                        Style="{StaticResource addButtonStyle}" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
