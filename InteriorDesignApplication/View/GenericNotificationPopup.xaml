<c:PopupView
    x:Class="View.GenericNotificationPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Model.Controls;assembly=Model"
    Title="GenericNotificationPopup"
    Height="300"
    Width="300"
    Loaded="PopupView_Loaded"
    Alignment="Center"
    Background="White"
    BackgroundType="Shroud">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                MinHeight="130"
                MaxHeight="220" />
            <RowDefinition
                Height="80" />
        </Grid.RowDefinitions>
        <Border
            Style="{StaticResource mainPopupBorderStyle}"
            Grid.RowSpan="2" />
        <TextBlock
            x:Name="entryValueText"
            Text="File is not found or an error has been encountered when opening file"
            Style="{StaticResource popupConfirmationTextStyle}" />
        <Button
            Grid.Row="1"
            Width="100"
            Height="30"
            x:Name="okButton"
            Click="okButton_Click"
            Style="{StaticResource mainButtonStyle}">
            <TextBlock
                Text="OK"
                Style="{StaticResource noIconButtonStyle}" />
        </Button>
    </Grid>
</c:PopupView>
